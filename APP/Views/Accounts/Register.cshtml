@model APP.VIewModels.RegisterVM
@{ 
    ViewBag.Title = "Register New User";
}
        <div class="content2">
            <div class="grids-heading gallery-heading signup-heading">
                <h2>Register</h2>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Register" asp-controller="Accounts" method="post">

                        <div asp-validation-summary="All" class="text-left text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="Email Address">
                            <span asp-validation-for="Email" class="text-danger text-left"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger text-left"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger text-left"></span>
                        </div>
                        <input type="submit" class="register" value="Signup">
                    </form>
                </div>
            </div>
            

            <a asp-action="SignIn" asp-controller="Accounts" >Back To Login</a>
        </div>

