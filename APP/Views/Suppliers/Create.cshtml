@model MODELS.Supplier

@{
    ViewData["Title"] = "Supplier Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 text-center">
        <h4>Create New Supplier</h4>
    </div>
</div>
<hr class="bg-light" />
<div class="row">
    <div class="col-sm-12 col-md-10 offset-md-1">
        <form asp-action="Create" asp-controller="Suppliers" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group row">
                        <label asp-for="SupplierName" class="control-label col-form-label col-md-2 text-md-right"></label>
                        <div class="col-md-10">
                            <input asp-for="SupplierName" class="form-control" />
                            <span asp-validation-for="SupplierName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Phone" class="control-label col-form-label col-md-2 text-md-right"></label>
                        <div class="col-md-10">
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="control-label col-form-label col-md-2 text-md-right"></label>
                        <div class="col-md-10">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Image" class="control-label col-form-label col-md-2 text-md-right"></label>
                        <div class="col-md-6">
                            <input name="supplierImage" id="supplierImage" type="file" class="" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Address" class="control-label col-form-label col-md-2 text-md-right"></label>
                        <div class="col-md-10">
                            <textarea asp-for="Address" class="form-control"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="SupplierTypeId" class="control-label col-form-label col-md-2 text-md-right"></label>
                        <div class="col-md-10">
                            <select asp-for="SupplierTypeId" class="form-control" asp-items="@ViewBag.SupplierList">
                                <option selected disabled>-Select Supplier Type-</option>
                            </select>
                            <span asp-validation-for="SupplierTypeId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 bg-light p-3">
                    <img id="imgPosition" src="~/images/Product/noimage.png" alt="Supplier Image" class="img-fluid" style="max-height:250px; max-width:360px; min-width:220px;"/>
                </div>
            </div>            
            
            <div class="form-group row">
                <div class="col-md-10 offset-md-1 text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-info" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    //Code for Image upload view
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#imgPosition').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]); // convert to base64 string
        }
    }

    $("#supplierImage").change(function () {
        readURL(this);
    });
</script>
}
