@model MODELS.ProductSize

<div class="form-group row">
    <label asp-for="SizeName" class="col-sm-3 col-form-label text-md-right"></label>
    <div class="col-sm-9">
        <input class="form-control" asp-for="SizeName">
        <span asp-validation-for="SizeName" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="ShortName" class="col-sm-3 col-form-label text-md-right"></label>
    <div class="col-sm-9">
        <input class="form-control" asp-for="ShortName">
        <span asp-validation-for="ShortName" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Description" class="col-sm-3 col-form-label text-md-right"></label>
    <div class="col-sm-9">
        <textarea class="form-control" asp-for="Description" rows="2"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="col-sm-9 offset-sm-3 text-md-right">
        <button type="submit" class="btn btn-info"><i class="fa fa-plus"></i> Add </button>
        <button type="button" class="btn btn-secondary" id="cancelButton" data-dismiss="modal">Close</button>
    </div>
</div>